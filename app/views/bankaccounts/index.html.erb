<p id="notice"><%= notice %></p>

<h1>Bankaccounts</h1>

<table>
  <thead>
    <tr>
      <th>Financialinstitution</th>
      <th>Account number</th>
      <th>Sort code</th>
      <th>Iban</th>
      <th>Bic</th>
      <th>Person</th>
      <th>Account code</th>
      <th>Account name</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bankaccounts.each do |bankaccount| %>
      <tr>
        <td><%= bankaccount.financialinstitution_id %></td>
        <td><%= bankaccount.account_number %></td>
        <td><%= bankaccount.sort_code %></td>
        <td><%= bankaccount.iban %></td>
        <td><%= bankaccount.bic %></td>
        <td><%= bankaccount.person_id %></td>
        <td><%= bankaccount.account_code %></td>
        <td><%= bankaccount.account_name %></td>
        <td><%= bankaccount.active %></td>
        <td><%= link_to 'Show', bankaccount %></td>
        <td><%= link_to 'Edit', edit_bankaccount_path(bankaccount) %></td>
        <td><%= link_to 'Destroy', bankaccount, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bankaccount', new_bankaccount_path %>
