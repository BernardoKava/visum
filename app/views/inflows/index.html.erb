<p id="notice"><%= notice %></p>

<h1>Inflows</h1>

<table>
  <thead>
    <tr>
      <th>Amount</th>
      <th>Details</th>
      <th>User</th>
      <th>Cashflow</th>
      <th>Year</th>
      <th>Month</th>
      <th>Person</th>
      <th>Inflowtype</th>
      <th>Date posted</th>
      <th>Rationale</th>
      <th>Bankaccount</th>
      <th>Follow up</th>
      <th>Picture</th>
      <th>Attachment</th>
      <th>Flowtype</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @inflows.each do |inflow| %>
      <tr>
        <td><%= inflow.amount %></td>
        <td><%= inflow.details %></td>
        <td><%= inflow.user_id %></td>
        <td><%= inflow.cashflow_id %></td>
        <td><%= inflow.year %></td>
        <td><%= inflow.month %></td>
        <td><%= inflow.person_id %></td>
        <td><%= inflow.inflowtype_id %></td>
        <td><%= inflow.date_posted %></td>
        <td><%= inflow.rationale %></td>
        <td><%= inflow.bankaccount_id %></td>
        <td><%= inflow.follow_up %></td>
        <td><%= inflow.picture %></td>
        <td><%= inflow.attachment %></td>
        <td><%= inflow.flowtype %></td>
        <td><%= link_to 'Show', inflow %></td>
        <td><%= link_to 'Edit', edit_inflow_path(inflow) %></td>
        <td><%= link_to 'Destroy', inflow, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

