
<%= simple_form_for(@network_switch) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :code_name %>
    <%= f.input :branding %>
    <%= f.input :number_of_ports %>
    <%= f.input :s_location %>
    <%= f.input :ip_address %>
    <%= f.input :user_name %>
    <%= f.input :password %>
    <%= f.input :active %>
    <%= f.input :notes %>
    <%= f.input :user_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
