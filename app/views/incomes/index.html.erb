<p id="notice"><%= notice %></p>

<h1>Incomes</h1>

<table>
  <thead>
    <tr>
      <th>Owner</th>
      <th>Amount</th>
      <th>Details</th>
      <th>User</th>
      <th>Budget</th>
      <th>Income type</th>
      <th>Year</th>
      <th>Month</th>
      <th>Person</th>
      <th>Inflowtype</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @incomes.each do |income| %>
      <tr>
        <td><%= income.owner %></td>
        <td><%= income.amount %></td>
        <td><%= income.details %></td>
        <td><%= income.user_id %></td>
        <td><%= income.budget_id %></td>
        <td><%= income.income_type %></td>
        <td><%= income.year %></td>
        <td><%= income.month %></td>
        <td><%= income.person_id %></td>
        <td><%= income.inflowtype_id %></td>
        <td><%= link_to 'Show', income %></td>
        <td><%= link_to 'Edit', edit_income_path(income) %></td>
        <td><%= link_to 'Destroy', income, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

