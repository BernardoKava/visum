
<%= simple_form_for(@service_provider) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :telephone %>
    <%= f.input :email %>
    <%= f.input :acc_number %>
    <%= f.input :user_id %>
    <%= f.input :active %>
    <%= f.input :link %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
