<p id="notice"><%= notice %></p>

<h1>Savings</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Month</th>
      <th>Year</th>
      <th>Saving date</th>
      <th>Name</th>
      <th>Balance</th>
      <th>Saving number</th>
      <th>Reference number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @savings.each do |saving| %>
      <tr>
        <td><%= saving.user_id %></td>
        <td><%= saving.month %></td>
        <td><%= saving.year %></td>
        <td><%= saving.saving_date %></td>
        <td><%= saving.name %></td>
        <td><%= saving.balance %></td>
        <td><%= saving.saving_number %></td>
        <td><%= saving.reference_number %></td>
        <td><%= link_to 'Show', saving %></td>
        <td><%= link_to 'Edit', edit_saving_path(saving) %></td>
        <td><%= link_to 'Destroy', saving, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

