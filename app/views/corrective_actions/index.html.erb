<p id="notice"><%= notice %></p>

<h1>Corrective Actions</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Issue management</th>
      <th>Target completion date</th>
      <th>Actual completion date</th>
      <th>Description</th>
      <th>Person</th>
      <th>User</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @corrective_actions.each do |corrective_action| %>
      <tr>
        <td><%= corrective_action.title %></td>
        <td><%= corrective_action.issue_management_id %></td>
        <td><%= corrective_action.target_completion_date %></td>
        <td><%= corrective_action.actual_completion_date %></td>
        <td><%= corrective_action.description %></td>
        <td><%= corrective_action.person_id %></td>
        <td><%= corrective_action.user_id %></td>
        <td><%= corrective_action.active %></td>
        <td><%= link_to 'Show', corrective_action %></td>
        <td><%= link_to 'Edit', edit_corrective_action_path(corrective_action) %></td>
        <td><%= link_to 'Destroy', corrective_action, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

