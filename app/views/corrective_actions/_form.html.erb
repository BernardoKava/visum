
<%= simple_form_for(@corrective_action) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :issue_management_id %>
    <%= f.input :target_completion_date %>
    <%= f.input :actual_completion_date %>
    <%= f.input :description %>
    <%= f.input :person_id %>
    <%= f.input :user_id %>
    <%= f.input :active %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
