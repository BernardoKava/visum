<p id="notice"><%= notice %></p>

<h1>Loan Managements</h1>

<table>
  <thead>
    <tr>
      <th>Year</th>
      <th>Month</th>
      <th>Loan registration</th>
      <th>Payment date</th>
      <th>Amount</th>
      <th>Note</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @loan_managements.each do |loan_management| %>
      <tr>
        <td><%= loan_management.year %></td>
        <td><%= loan_management.month %></td>
        <td><%= loan_management.loan_registration_id %></td>
        <td><%= loan_management.payment_date %></td>
        <td><%= loan_management.amount %></td>
        <td><%= loan_management.note %></td>
        <td><%= loan_management.user_id %></td>
        <td><%= link_to 'Show', loan_management %></td>
        <td><%= link_to 'Edit', edit_loan_management_path(loan_management) %></td>
        <td><%= link_to 'Destroy', loan_management, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

