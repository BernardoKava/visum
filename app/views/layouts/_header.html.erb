

<header class="navbar navbar-fixed-top navbar-default">
  <div class="container">
    <%= link_to image_tag("atom.png", alt: "atom logo", :size => "50x50") ,root_path, id: "logo"%>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home",root_path, class: 'fa fa-home' %></li>
        <li><%= link_to "Centralis",   'http://herga.net' %></li>

        <% if current_user %>
          <% if current_user.admin %>
            <li><%= link_to "Administration",  rails_admin_path  %></li>
          <% end  %>
          <li class="alert-danger"><%= link_to "Log out", destroy_user_session_path, method: :delete, class:'fa fa-sign-out' %></li>
        <% else %>
          <li><%= link_to "Log in", new_user_session_path, class:'fa fa-sign-in' %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
