<p id="notice"><%= notice %></p>

<h1>Cashboxes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Accounting date</th>
      <th>Active</th>
      <th>Month</th>
      <th>Year</th>
      <th>Notes</th>
      <th>Balance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cashboxes.each do |cashbox| %>
      <tr>
        <td><%= cashbox.name %></td>
        <td><%= cashbox.accounting_date %></td>
        <td><%= cashbox.active %></td>
        <td><%= cashbox.month %></td>
        <td><%= cashbox.year %></td>
        <td><%= cashbox.notes %></td>
        <td><%= cashbox.balance %></td>
        <td><%= link_to 'Show', cashbox %></td>
        <td><%= link_to 'Edit', edit_cashbox_path(cashbox) %></td>
        <td><%= link_to 'Destroy', cashbox, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

