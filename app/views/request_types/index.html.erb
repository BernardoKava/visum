<p id="notice"><%= notice %></p>

<h1>Request Types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Active</th>
      <th>Notes</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @request_types.each do |request_type| %>
      <tr>
        <td><%= request_type.name %></td>
        <td><%= request_type.description %></td>
        <td><%= request_type.active %></td>
        <td><%= request_type.notes %></td>
        <td><%= request_type.user_id %></td>
        <td><%= link_to 'Show', request_type %></td>
        <td><%= link_to 'Edit', edit_request_type_path(request_type) %></td>
        <td><%= link_to 'Destroy', request_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

