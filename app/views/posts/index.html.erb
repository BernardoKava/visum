<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Post type</th>
      <th>Description</th>
      <th>Signed for by</th>
      <th>Scanned</th>
      <th>User</th>
      <th>Delivery</th>
      <th>Owner</th>
      <th>Post type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.post_type %></td>
        <td><%= post.description %></td>
        <td><%= post.signed_for_by %></td>
        <td><%= post.scanned %></td>
        <td><%= post.user_id %></td>
        <td><%= post.delivery_id %></td>
        <td><%= post.owner %></td>
        <td><%= post.post_type_id %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
