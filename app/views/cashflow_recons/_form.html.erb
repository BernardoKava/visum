
<%= simple_form_for(@cashflow_recon) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :cashflow_id %>
    <%= f.input :user_id %>
    <%= f.input :error_details %>
    <%= f.input :reconciliation_rationale %>
    <%= f.input :correction_amount %>
    <%= f.input :authorised_by %>
    <%= f.input :authorisation_date %>
    <%= f.input :person_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
