<p id="notice"><%= notice %></p>

<h1>Cashflow Recons</h1>

<table>
  <thead>
    <tr>
      <th>Cashflow</th>
      <th>User</th>
      <th>Error details</th>
      <th>Reconciliation rationale</th>
      <th>Correction amount</th>
      <th>Authorised by</th>
      <th>Authorisation date</th>
      <th>Person</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cashflow_recons.each do |cashflow_recon| %>
      <tr>
        <td><%= cashflow_recon.cashflow_id %></td>
        <td><%= cashflow_recon.user_id %></td>
        <td><%= cashflow_recon.error_details %></td>
        <td><%= cashflow_recon.reconciliation_rationale %></td>
        <td><%= cashflow_recon.correction_amount %></td>
        <td><%= cashflow_recon.authorised_by %></td>
        <td><%= cashflow_recon.authorisation_date %></td>
        <td><%= cashflow_recon.person_id %></td>
        <td><%= link_to 'Show', cashflow_recon %></td>
        <td><%= link_to 'Edit', edit_cashflow_recon_path(cashflow_recon) %></td>
        <td><%= link_to 'Destroy', cashflow_recon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

