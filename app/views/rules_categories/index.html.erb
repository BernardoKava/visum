<p id="notice"><%= notice %></p>

<h1>Rules Categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rules_categories.each do |rules_category| %>
      <tr>
        <td><%= rules_category.name %></td>
        <td><%= rules_category.description %></td>
        <td><%= link_to 'Show', rules_category %></td>
        <td><%= link_to 'Edit', edit_rules_category_path(rules_category) %></td>
        <td><%= link_to 'Destroy', rules_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

