
<%= simple_form_for(@lodgement) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :owner %>
    <%= f.input :amount %>
    <%= f.input :details %>
    <%= f.input :user_id %>
    <%= f.input :saving_id %>
    <%= f.input :institution %>
    <%= f.input :year %>
    <%= f.input :month %>
    <%= f.input :person_id %>
    <%= f.input :financialinstitution_id %>
    <%= f.input :origination %>
    <%= f.input :rationale %>
    <%= f.input :day %>
    <%= f.input :plannedactivity_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
