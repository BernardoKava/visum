<h1>Employments</h1>

<table>
  <thead>
    <tr>
      <th>Company</th>
      <th>Position</th>
      <th>From</th>
      <th>To</th>
      <th>Terminationreason</th>
      <th>Actve</th>
      <th>Person</th>
      <th>User</th>
      <th>Company address</th>
      <th>Company telephone</th>
      <th>Company email</th>
      <th>Company details</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employments.each do |employment| %>
      <tr>
        <td><%= employment.company %></td>
        <td><%= employment.position %></td>
        <td><%= employment.from %></td>
        <td><%= employment.to %></td>
        <td><%= employment.terminationreason %></td>
        <td><%= employment.actve %></td>
        <td><%= employment.person_id %></td>
        <td><%= employment.user_id %></td>
        <td><%= employment.company_address %></td>
        <td><%= employment.company_telephone %></td>
        <td><%= employment.company_email %></td>
        <td><%= employment.company_details %></td>
        <td><%= employment.role %></td>
        <td><%= link_to 'Show', employment %></td>
        <td><%= link_to 'Edit', edit_employment_path(employment) %></td>
        <td><%= link_to 'Destroy', employment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

