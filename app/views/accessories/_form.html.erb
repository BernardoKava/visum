
<%= simple_form_for(@accessory) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :active %>
    <%= f.input :hard_disk %>
    <%= f.input :network_card %>
    <%= f.input :server_record_id %>
    <%= f.input :client_record_id %>
    <%= f.input :notes %>
    <%= f.input :user_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
