<p id="notice"><%= notice %></p>

<h1>Deployment Statuses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Active</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @deployment_statuses.each do |deployment_status| %>
      <tr>
        <td><%= deployment_status.name %></td>
        <td><%= deployment_status.description %></td>
        <td><%= deployment_status.active %></td>
        <td><%= deployment_status.notes %></td>
        <td><%= link_to 'Show', deployment_status %></td>
        <td><%= link_to 'Edit', edit_deployment_status_path(deployment_status) %></td>
        <td><%= link_to 'Destroy', deployment_status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

