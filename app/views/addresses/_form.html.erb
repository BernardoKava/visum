
<%= simple_form_for(@address) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :address %>
    <%= f.input :user_id %>
    <%= f.input :active %>
    <%= f.input :person_id %>
    <%= f.input :from %>
    <%= f.input :to %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
