
<%= simple_form_for(@comment) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :inventory_id %>
    <%= f.input :user_id %>
    <%= f.input :commentary %>
    <%= f.input :person_id %>
    <%= f.input :cashflow_id %>
    <%= f.input :saving_id %>
    <%= f.input :delivery_id %>
    <%= f.input :budget_id %>
    <%= f.input :issue_management_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
