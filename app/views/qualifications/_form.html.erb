
<%= simple_form_for(@qualification) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :school %>
    <%= f.input :from %>
    <%= f.input :to %>
    <%= f.input :grade %>
    <%= f.input :active %>
    <%= f.input :person_id %>
    <%= f.input :user_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
