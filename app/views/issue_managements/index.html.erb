<p id="notice"><%= notice %></p>

<h1>Issue Managements</h1>

<table>
  <thead>
    <tr>
      <th>Issue title</th>
      <th>Description</th>
      <th>Completion rate</th>
      <th>Person</th>
      <th>User</th>
      <th>Completion target date</th>
      <th>Completion actual date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @issue_managements.each do |issue_management| %>
      <tr>
        <td><%= issue_management.issue_title %></td>
        <td><%= issue_management.description %></td>
        <td><%= issue_management.completion_rate %></td>
        <td><%= issue_management.person_id %></td>
        <td><%= issue_management.user_id %></td>
        <td><%= issue_management.completion_target_date %></td>
        <td><%= issue_management.completion_actual_date %></td>
        <td><%= link_to 'Show', issue_management %></td>
        <td><%= link_to 'Edit', edit_issue_management_path(issue_management) %></td>
        <td><%= link_to 'Destroy', issue_management, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Issue Management', new_issue_management_path %>
